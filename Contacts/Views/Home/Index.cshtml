<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Мобильный телефон</th>
            <th>Должность</th>
            <th> День рождения</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var viewModel in Model)
        {
            <tr>
                <td>@viewModel.Name </td>>
                <td>@viewModel.MobilePhone</td>
                <td>@viewModel.JobTitle</td>
                <td>@viewModel.BirthDate</td>
                <td><a href="/Home/DeleteContact?id=@viewModel.Id">Удалить</a></td>
                <td><a href="/Home/UpdateContact?id=@viewModel.Id">Редактировать </a></td>
            </tr>
        }
    </tbody>

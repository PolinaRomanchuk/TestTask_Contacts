@using Contacts.Models;
@model List<ContactViewModel>

<button href="#" id="popup-link">Добавить новый контакт</button>
<div class="center" id="popup-window">
    <button class ="exit-button" id="close-button">x</button>
    <h1>Новый контакт</h1>
    <form method="post" action="Home/CreateNewContact">

        <div class="inputbox">
            <input type="text" required="required" name="Name">
            <span>Имя</span>
        </div>
        <div class="inputbox">
            <input type="text" required="required" name="MobilePhone">
            <span>Мобильный телефон</span>
        </div>
        <div class="inputbox">
            <input type="text" required="required" name="BirthDate">
            <span>Дата рождения</span>
        </div>
        <div class="inputbox">
            <input type="text" required="required" name="JobTitle">
            <span>Должность</span>
        </div>
        <div class="inputbox">
            <input type="submit" value="Сохранить" />
        </div>
    </form>
    
</div>

